<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RengzActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#112d4e"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="校园认证"
            android:textColor="#FCFAFA"
            android:textSize="20dp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:id="@+id/rz_xsz"
                    android:layout_width="210dp"
                    android:layout_height="300dp" />
            </android.support.v7.widget.CardView>

            <EditText
                android:inputType="number|textPassword"
                android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:id="@+id/rz_xh"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="请输入学号" />

            <EditText
                android:inputType="number"
                android:id="@+id/rz_sjh"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="请输入手机号" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="请上传校园卡正面图片以及学号和手机号以进行实名认证"
                android:textColor="#496644"
                android:textSize="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="50dp"
                    app:cardCornerRadius="6dp">

                    <Button
                        android:id="@+id/rz_sc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#496644"
                        android:text="确认上传" />
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>