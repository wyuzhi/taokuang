<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CommentActivity">

    <android.support.v7.widget.Toolbar
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#112d4e"
        android:theme="@style/AppTheme.AppBarOverlay">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="评价"
            android:textSize="20dp"
            android:textColor="#FCFAFA"/>
    </android.support.v7.widget.Toolbar>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:text="描述相符"
                    android:textColor="#FF161616" />

                <RatingBar
                    style="@style/RatingBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_merchant_name"
                    android:layout_gravity="center_vertical"
                    android:maxHeight="32dp"
                    android:minHeight="16dp"
                    android:numStars="5"
                    android:rating="0.0"
                    android:stepSize="0.1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:text="卖家态度"
                    android:textColor="#FF161616" />

                <RatingBar
                    android:id="@+id/m_ratingBar_fuwu"
                    style="@style/RatingBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_merchant_name"
                    android:layout_gravity="center_vertical"
                    android:maxHeight="32dp"
                    android:minHeight="16dp"
                    android:numStars="5"
                    android:rating="0.0"
                    android:stepSize="0.1" />
            </LinearLayout>

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:padding="30dp"
                android:background="@null"
                android:gravity="top|left"
                android:id="@+id/m_edit"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="请输入你的评价" />
        </LinearLayout>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="6dp">

        <Button
            android:id="@+id/m_commit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#3f72af"
            android:text="确认评价"
            android:textColor="@drawable/but_fb"
            android:textSize="18sp" />


    </android.support.v7.widget.CardView>

</LinearLayout>