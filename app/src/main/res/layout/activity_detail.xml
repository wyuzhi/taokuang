<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detail_tx"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="7dp" />

            <TextView
                android:id="@+id/detail_nc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:text="没那么简单" />
        </LinearLayout>

        <TextView
            android:id="@+id/detail_jg"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp" />

        <TextView
            android:textSize="15dp"
            android:id="@+id/detail_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp" />

        <TextView
            android:textSize="15dp"
            android:layout_margin="7dp"
            android:id="@+id/detail_ms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/detail_im1"
            android:layout_width="346.72dp"
            android:layout_height="454.4dp"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/detail_im2"
            android:layout_width="346.72dp"
            android:layout_height="454.4dp"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/detail_im3"
            android:layout_width="346.72dp"
            android:layout_height="454.4dp"
            android:layout_margin="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式:"
                android:textColor="#496644"
                android:textSize="20dp" />

            <TextView
                android:textSize="15dp"
                android:layout_margin="8dp"
                android:id="@+id/detail_lx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易地点:"
                android:textColor="#496644"
                android:textSize="20dp" />

            <TextView
                android:textSize="15dp"
                android:layout_margin="8dp"
                android:id="@+id/detail_wz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_gravity="right"
            android:layout_margin="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp">
        <Button
            android:id="@+id/detail_gm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3f72af"
            android:text="GOT'EM" />
        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>