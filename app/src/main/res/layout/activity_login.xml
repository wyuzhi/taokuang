<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="103.67dp"
        android:layout_height="97.08dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60.6dp"
        android:src="@mipmap/im_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="登录"
        android:textColor="@color/commonColorGrey"
        android:textSize="34dp"
        android:textStyle="bold" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dl_yhm"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="学号"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dl_mm"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/dl_dl"
        android:layout_width="93.26dp"
        android:layout_height="27.78dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:background="@mipmap/im_login_finish"
        android:textColor="@color/commonColorGrey" />

    <Button
        android:id="@+id/dl_zc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:padding="3dp"
        android:text="还没注册账号？点击进行注册账号"
        android:textColor="@color/colorDarkCommon" />

</LinearLayout>