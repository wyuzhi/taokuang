<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="205dp"
    android:layout_height="108dp"
    android:background="@drawable/bg_purchase">

    <ImageView
        android:layout_width="91dp"
        android:layout_height="12dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@color/commonColorYellow" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textColor="@color/commonColorBlue2"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_purchase_cancle"
        android:layout_width="61dp"
        android:layout_height="31dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/bg_purchase_btn"
        android:textColor="@color/commonColorBlue2"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_purchase_confirm"
        android:layout_width="61dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:background="@drawable/bg_purchase_btn"
        android:textColor="@color/commonColorBlue2"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>