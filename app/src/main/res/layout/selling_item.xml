<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">

                <com.flying.taokuang.ui.AsyncImageView
                    android:id="@+id/item_fm_zs"
                    android:layout_width="172dp"
                    android:layout_height="227dp" />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">


                <Button
                    android:id="@+id/item_bj_zs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_purchase_btn"
                    android:text="编辑"
                    android:textColor="@color/commonColorBlue2"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/item_sc_zs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_bj_zs"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_purchase_btn"
                    android:text="删除"
                    android:textColor="@color/commonColorBlue2"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/item_sc_cl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_sc_zs"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_purchase_btn"
                    android:text="擦亮"
                    android:textColor="@color/commonColorBlue2"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_bt_zs"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:lines="1" />

        <TextView
            android:id="@+id/item_jg_zs"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>