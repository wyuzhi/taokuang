<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp">


        <TextView
            android:id="@+id/item_bt_zs"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="25dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="物品"
            android:textColor="@color/commonColorGrey4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_jg_zs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/item_bt_zs"
            android:text="￥123"
            android:textColor="@color/commonColorOrange2"
            android:textSize="16sp" />

        <Button
            android:id="@+id/item_bj_zs"
            android:layout_width="40dp"
            android:layout_height="22dp"
            android:layout_below="@id/item_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_purchase_btn"
            android:text="编辑"
            android:textColor="@color/commonColorGrey9"
            android:textSize="8sp" />

        <Button
            android:id="@+id/item_sc_zs"
            android:layout_width="40dp"
            android:layout_height="22dp"
            android:layout_below="@id/item_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/item_bj_zs"
            android:layout_toRightOf="@id/item_bj_zs"
            android:background="@drawable/bg_purchase_btn"
            android:text="删除"
            android:textColor="@color/commonColorGrey9"
            android:textSize="8sp" />

        <Button
            android:id="@+id/item_sc_cl"
            android:layout_width="40dp"
            android:layout_height="22dp"
            android:layout_below="@id/item_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/item_sc_zs"
            android:layout_toRightOf="@id/item_sc_zs"
            android:background="@drawable/bg_purchase_btn"
            android:text="擦亮"
            android:textColor="@color/commonColorGrey9"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/item_content"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_jg_zs"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="详情信息"
            android:textColor="@color/commonColorGrey9"
            android:textSize="14sp" />

        <com.flying.taokuang.ui.AsyncImageView
            android:id="@+id/item_cover_img"
            android:layout_width="137dp"
            android:layout_height="89dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>