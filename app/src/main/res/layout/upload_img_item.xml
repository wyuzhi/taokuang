    android:layout_height="wrap_content">

    <com.flying.taokuang.ui.AsyncImageView
        android:id="@+id/grid_img"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <Button
        android:id="@+id/grid_dl"
