<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Activity.NoBackground" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Activity.Splash" parent="Theme.Activity.NoBackground">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="toolbarTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FCFAFA</item>
    </style>

    <style name="toolbarTitle2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RatingBar1" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:maxHeight">64dp</item>
        <item name="android:isIndicator">false</item>
        <item name="android:minHeight">32dp</item>
    </style>
    <!--popupwindow-->

    <style name="HomeTabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PersonalTabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ReleaseEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/commonColorGrey5</item>
        <item name="colorControlActivated">@color/commonColorGrey5</item>
    </style>
</resources>
